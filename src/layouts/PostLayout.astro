---
import type { MDXLayoutProps } from 'astro';
import Layout from '@src/layouts/Layout.astro';

/**
 * エクスポートでビルド失敗しそう
 * @see: https://github.com/withastro/astro/issues/5614
 */
interface Props
  extends MDXLayoutProps<{
    title: string;
    date: string;
  }> {}

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <div class="h-full max-w-[1000px] mx-auto bg-white rounded-lg py-4">
    <h1 class="text-2xl text-center">{frontmatter.title}</h1>
    <p class="text-sm text-center my-1">{frontmatter.date}</p>
    <hr class="mx-20" />
    <div class="py-4 px-5 sm:px-10 md:px-20 leading-7">
      <slot />
    </div>
  </div>
</Layout>
